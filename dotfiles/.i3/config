# customize specific applications
for_window [class="^Thunar$"] floating enable border pixel 5
for_window [class="^Thunderbird$" window_role="^Msgcompose$"] floating enable border pixel 5
for_window [window_role="^pop-up$"] floating enable border pixel 5
for_window [window_role="^file transfer$"] floating enable border pixel 5
for_window [instance="vlc"] floating enable border pixel 5
for_window [instance="feh"] floating enable border pixel 5


# additional key bindings
bindsym $mod+Shift+V exec gvim
bindsym $mod+I exec firefox
bindsym $mod+T exec urxvtc -e ranger
bindsym $mod+Shift+T exec thunar
bindsym Print exec --no-startup-id scrot -e 'mv $f ~/Pictures/ 2>/dev/null'
bindsym $mod+Shift+S exec sudo shutdown -h now

# set wallpaper
exec sh ~/.fehbg &

# Autostart
exec --no-startup-id unclutter 
exec --no-startup-id urxvtd -q -f
exec --no-startup-id volumeicon
exec --no-startup-id wicd-gtk --tray
exec --no-startup-id xfce4-power-manager

# populate workspaces
exec $HOME/.i3/startup.sh &



